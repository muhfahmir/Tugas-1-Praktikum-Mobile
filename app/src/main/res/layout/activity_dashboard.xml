<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="#F7FF8E"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="1"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imgMain"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/main"
            android:layout_weight="1"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="When Pamungkas Said, 'makan bubur jangan diaduk'"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="I want you to the bone, Take me home, I'm fallin Love me long, I'm rollin' Losing control, body and soul Mind too for sure, I'm already yours Walk you down, I'm all in Hold you tight, Mind too for sure, I'm already yours"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imgSub"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/submain"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>